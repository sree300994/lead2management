<div class="row">
	<div class="col-md-7">
		<div class="page-header">
		<h2>Listing Users</h2>	
		</div>
		<% if @users.empty? %>
			<p>No Users Found</p>
		<% else %>
			<table class="table" id="listUsers">
				<thead>
					<tr>
						<th>Name</th>
						<th>Email</th>
						<th>Mobile</th>
						<th>Role</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td><%= link_to user.full_name, user %></td>
							<td><%= user.email %></td>
							<td><%= user.mobile %></td>
							<td><%= user.role.name %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		<% end %>
	</div>
	<% if can? :create, User.new %>
		<div class="col-md-5">
			<div class="page-header">
				<h2>Add User</h2>
			</div>
			<div id="errorMsg"></div>
			<%= render 'form' %>
		</div>
	<% end %>
</div>

<script>

  $(document).ready(function(){
    $('#listUsers').DataTable();
  });
</script>
