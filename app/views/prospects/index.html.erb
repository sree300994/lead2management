<div class="row">
	<div class="col-md-7">
		<div class="page-header">
			<h2>Listing Prospects</h2>
		</div>
		<% if @prospects.empty? %>
			<p>No Prospects Found</p>
		<% else %>
			<table class="table" id="listProspects">
				<thead>
					<tr>
						<th>Full Name</th>
						<th>Email</th>
						<th>Mobile</th>
						<th>Location</th>
						<th>Stage</th>
						<th>User</th>
					</tr>
				</thead>
				<tbody>
					<% @prospects.each do |prospect| %>
						<tr>
							<td><%= link_to prospect.full_name, prospect %></td>
							<td><%= prospect.email %></td>
							<td><%= prospect.mobile %></td>
							<td><%= prospect.location %></td>
							<td><%= prospect.stage.name %></td>
							<td><%= prospect.user.full_name %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		<% end %>
	</div>
	<% if can? :create, Prospect.new %>
		<div class="col-md-5">
			<div class="page-header">
				<h2>Add Prospect</h2>
			</div>
			<div id="errorMsg"></div>
			<%= render 'form' %>
		</div>
	<% end %>
</div>






